{
  "$id": "business-rules.ref.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "rule": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "implementation": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["frontend", "backend", "both"]
              },
              "details": {
                "type": "string"
              }
            },
            "required": ["type", "details"]
          },
          "subrules": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "subrule": {
                  "type": "object",
                  "properties": {
                    "description": {
                      "type": "string"
                    },
                    "implementation": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "enum": ["frontend", "backend", "both"]
                        },
                        "details": {
                          "type": "string"
                        }
                      },
                      "required": ["type", "details"]
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}