{
  "$id": "project.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "skeleton": {
      "type": "string",
      "enum": [
        "backoffice",
        "marketplace",
        "landingPage",
        "socialNetwork"
      ]
    },
    "flows": {
      "type": "object",
      "properties": {
        "authentication": {
          "type": "boolean"
        },
        "permission": {
          "type": "boolean"
        },
        "invitation": {
          "type": "boolean"
        },
        "registration": {
          "type": "boolean"
        }
      }
    },
    "businessPlan": {
      "$ref": "business-plan.ref.json"
    },
    "businessRules": {
      "$ref": "business-rules.ref.json"
    },
    "frontend": {
      "$ref": "frontend.ref.json"
    },
    "backend": {
      "$ref": "backend.ref.json"
    },
    "e2e": {
      "$ref": "e2e.ref.json"
    },
    "modules": {
      "$ref": "module.ref.json"
    },
    "flowChart": {
      "$ref": "form-flowchart.ref.json"
    }
  },
  "required": [
    "id",
    "title",
    "description",
    "skeleton"
  ]
}