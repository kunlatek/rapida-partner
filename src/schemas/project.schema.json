{
  "$id": "project.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "flow": {
      "type": "string",
      "enum": [
        "backofficeByInvitationWithoutPermissions",
        "backofficeByInvitationAndPermissionsByComponent",
        "backofficeOpenedWithoutPermissions",
        "backofficeOpenedAndPermissionsByComponent",
        "marketplace",
        "landingPage",
        "socialNetwork"
      ]
    },
    "businessPlan": {
      "$ref": "business-plan.ref.json"
    },
    "businessRules": {
      "$ref": "business-rules.ref.json"
    },
    "frontend": {
      "$ref": "frontend.ref.json"
    },
    "backend": {
      "$ref": "backend.ref.json"
    },
    "infrastructure": {
      "$ref": "infrastructure.ref.json"
    },
    "cicd": {
      "type": "object",
      "properties": {
        "provider": {
          "type": "string",
          "enum": ["github", "gitlab", "bitbucket"],
          "description": "Provider do repositório Git e pipeline de CI"
        },
        "strategy": {
          "type": "string",
          "enum": ["standard", "manual_approval"],
          "default": "standard",
          "description": "Estratégia de deployment (ex: deploy direto ou com aprovação)"
        }
      },
      "required": ["provider"],
      "additionalProperties": false
    },
    "modules": {
      "$ref": "module.ref.json"
    },
    "flowChart": {
      "$ref": "form-flowchart.ref.json"
    }
  },
  "required": ["id", "title", "description"]
}
