{
  "$id": "dashboard.ref.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "componentType": { "const": "dashboard" },
    "id": { "type": "string" },
    "title": { "type": "string" },
    "icon": { "type": "string" },
    "guards": {
      "type": "string",
      "enum": ["isAuthenticated", "isAuthorized"]
    },
    "businessRules": { "$ref": "business-rules.ref.json" },
    "userStory": { "type": "string" },
    "layout": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "columns": { "type": "number" },
          "widgets": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "title": { "type": "string" },
                "type": {
                  "type": "string",
                  "enum": ["stats", "chart", "table", "list", "component"]
                },
                "width": {
                  "type": "number",
                  "enum": [1, 2, 3, 4, 6, 12]
                },
                "height": {
                  "type": "string",
                  "enum": ["auto", "small", "medium", "large"]
                },
                "dataSource": { "$ref": "form-common-api-request.ref.json" },
                "refreshInterval": { "type": "number" },
                "component": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["dataTable", "dataGrid", "dataCard", "dataChart"]
                    },
                    "config": {}
                  },
                  "required": ["type", "config"]
                },
                "statsConfig": {
                  "type": "object",
                  "properties": {
                    "property": { "type": "string" },
                    "format": { "type": "string" },
                    "icon": { "type": "string" },
                    "subtitle": { "type": "string" },
                    "trend": {
                      "type": "object",
                      "properties": {
                        "property": { "type": "string" },
                        "upIsGood": { "type": "boolean" }
                      },
                      "required": ["property"]
                    }
                  },
                  "required": ["property"]
                },
                "chartConfig": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["line", "bar", "pie", "doughnut", "radar"]
                    },
                    "properties": {
                      "type": "object",
                      "properties": {
                        "x": { "type": "string" },
                        "y": {
                          "oneOf": [
                            { "type": "string" },
                            {
                              "type": "array",
                              "items": { "type": "string" }
                            }
                          ]
                        }
                      },
                      "required": ["x", "y"]
                    },
                    "options": {}
                  },
                  "required": ["type", "properties"]
                }
              },
              "required": ["id", "title", "type", "width"]
            }
          }
        },
        "required": ["id", "columns", "widgets"]
      }
    }
  },
  "required": ["componentType", "id", "title", "layout"]
}
