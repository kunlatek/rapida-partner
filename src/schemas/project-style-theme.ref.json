          "type": "object",
          "properties": {
            "background": { "type": "string" },
            "text": { "type": "string" },
            "border": { "type": "string" },
            "borderRadius": { "type": "string" },
            "hoverBackground": { "type": "string" },
            "hoverText": { "type": "string" },
            "hoverBorder": { "type": "string" },
            "disabledBackground": { "type": "string" },
            "disabledText": { "type": "string" },
            "disabledBorder": { "type": "string" }
          }
