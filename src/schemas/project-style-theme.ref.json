          "type": "object",
          "properties": {
            "text": { "type": "string" },
            "fontSize": { "type": "string" },
            "fontWeight": { "type": "string" }
          }
        },
        "fieldset": {
          "type": "object",
          "properties": {
            "border": { "type": "string" },
            "borderRadius": { "type": "string" },
            "legendText": { "type": "string" },
            "legendFontSize": { "type": "string" },
            "legendFontWeight": { "type": "string" }
          }
        }
      }
    }
