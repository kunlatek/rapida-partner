{
  "$id": "form-numeric.ref.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "numeric"
    },
    "name": {
      "type": "string"
    },
    "label": {
      "type": "string"
    },
    "placeholder": {
      "type": "string"
    },
    "tooltip": {
      "type": "string"
    },
    "prefix": {
      "type": "string"
    },
    "suffix": {
      "type": "string"
    },
    "decimalScale": {
      "type": "number"
    },
    "fixedDecimalScale": {
      "type": "boolean"
    },
    "thousandSeparator": {
      "type": "boolean"
    },
    "isDisabled": {
      "type": "boolean"
    },
    "isDisabledOnUpdate": {
      "type": "boolean"
    },
    "isHidden": {
      "type": "boolean"
    },
    "isRequired": {
      "type": "boolean"
    },
    "isUnique": {
      "type": "boolean"
    },
    "conditions": {
      "$ref": "form-condition.ref.json"
    },
    "todo": {
      "type": "string"
    },
    "businessRules": {
      "$ref": "business-rules.ref.json"
    }
  },
  "required": ["type", "name", "label"]
}
