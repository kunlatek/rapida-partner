{
  "$id": "form-input.ref.json",
  "type": "object",
  "properties": {
    "type": {
      "const": "input"
    },
    "name": {
      "type": "string"
    },
    "dataType": {
      "type": "string",
      "$ref": "types-datatype.ref.json"
    },
    "label": {
      "type": "string"
    },
    "placeholder": {
      "type": "string"
    },
    "tooltip": {
      "type": "string"
    },
    "isAutofocus": {
      "type": "boolean"
    },
    "isDisabled": {
      "type": "boolean"
    },
    "isDisabledOnUpdate": {
      "type": "boolean"
    },
    "isHidden": {
      "type": "boolean"
    },
    "isRequired": {
      "type": "boolean"
    },
    "isUnique": {
      "type": "boolean"
    },
    "conditions": {
      "$ref": "condition.ref.json"
    },
    "validators": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "cep",
          "cpf",
          "cnpj",
          "onlyNumbers",
          "phone",
          "email"
        ]
      }
    },
    "todo": {
      "type": "string"
    },
    "businessRules": {
      "$ref": "business-rules.ref.json"
    },
    "maxLength": {
      "type": "number"
    },
    "minLength": {
      "type": "number"
    },
    "apiRequest": {
      "$ref": "form-common-api-request.ref.json"
    },
    "maskRegex": {
      "type": "string"
    },
    "suffix": {
      "type": "string"
    },
    "prefix": {
      "type": "string"
    },
    "defaultValue": {
      "type": [
        "string",
        "number",
        "null"
      ]
    },
    "elementDescription": {
      "type": "string"
    },
    "space": {
      "type": "number",
      "enum": [
        1,
        2,
        3,
        4
      ]
    }
  },
  "required": [
    "type",
    "dataType",
    "name",
    "label"
  ]
}