{
  "$id": "form-input.ref.json",
  "type": "object",
  "properties": {
    "type": {
      "const": "input"
    },
    "name": {
      "type": "string"
    },
    "dataType": {
      "type": "string",
      "enum": [
        "text",
        "number",
        "password",
        "email",
        "color",
        "date",
        "wysiwyg",
        "time",
        "char",
        "nchar",
        "varchar",
        "varchar2",
        "nvarchar",
        "longtext",
        "clob",
        "nclob",
        "decimal",
        "numeric",
        "integer",
        "float",
        "double",
        "real",
        "timestamp",
        "datetime",
        "datetime2",
        "uniqueidentifier",
        "boolean"
      ]
    },
    "label": {
      "type": "string"
    },
    "placeholder": {
      "type": "string"
    },
    "tooltip": {
      "type": "string"
    },
    "isAutofocus": {
      "type": "boolean"
    },
    "isDisabled": {
      "type": "boolean"
    },
    "isDisabledOnUpdate": {
      "type": "boolean"
    },
    "isRequired": {
      "type": "boolean"
    },
    "isUnique": {
      "type": "boolean"
    },
    "conditions": {
      "$ref": "form-condition.ref.json"
    },
    "validators": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["cep", "cpf", "cnpj", "onlyNumbers", "phone", "email"]
      }
    },
    "todo": {
      "type": "string"
    },
    "businessRules": {
      "$ref": "business-rules.ref.json"
    },
    "maxlength": {
      "type": "number"
    },
    "minLength": {
      "type": "number"
    },
    "apiRequest": {
      "$ref": "form-common-api-request.ref.json"
    },
    "maskRegex": {
      "type": "string"
    },
    "suffix": {
      "type": "string"
    },
    "prefix": {
      "type": "string"
    }
  },
  "required": ["type", "dataType", "name", "label"]
}
