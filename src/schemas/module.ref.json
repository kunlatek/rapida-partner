{
  "$id": "module.ref.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "title": {
        "type": "string"
      },
      "icon": {
        "type": "string"
      },
      "components": {
        "type": "array",
        "items": {
          "oneOf": [
            {
              "$ref": "form.ref.json"
            },
            {
              "$ref": "list.ref.json"
            },
            {
              "$ref": "data-table.ref.json"
            },
            {
              "$ref": "data-card.ref.json"
            },
            {
              "$ref": "data-grid.ref.json"
            },
            {
              "$ref": "data-detail.ref.json"
            },
            {
              "$ref": "data-chart.ref.json"
            },
            {
              "$ref": "panel.ref.json"
            }
          ]
        }
      },
      "businessRules": {
        "$ref": "business-rules.ref.json"
      },
      "todo": {
        "type": "array",
        "items": {
          "$ref": "todo.ref.json"
        }
      }
    },
    "required": [
      "id",
      "title",
      "icon",
      "components"
    ]
  }
}